<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- set the transparent background  your bottom sheet -->
    <style name="BottomSheetDialogThemeTransparent" parent="BaseBottomSheetDialogTransparent" />

    <style name="BaseBottomSheetDialogTransparent" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetTransparent</item>
    </style>

    <style name="BottomSheetTransparent" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_transparent</item>
    </style>


    <!-- Text View -->
    <!--primary color TextView -->
    <style name="PrimaryTextViewExtraLarge">
        <item name="android:textSize">@dimen/font_24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewLarge">
        <item name="android:textSize">@dimen/font_22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewLargeMedium">
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewRegular">
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewMedium">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewSmall">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewSmallGRay">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/colorGrayHint</item>
    </style>

    <style name="PrimaryTextViewSmallMedium">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewExtraSmall">
        <item name="android:textSize">@dimen/font_10sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextViewExtraSmallItalic">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PrimaryTextViewSmallest">
        <item name="android:textSize">@dimen/font_8sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>